---
import type { HFModel } from '../types';

type Props = Partial<HFModel>;

const { 
  title, 
  description = '', 
  url, 
  author, 
  lastModified,
  model_type,
  base_model = [],
  likes = 0,
  downloads = 0,
  tags = []
} = Astro.props;
---

<article class="model-card">
  <h2><a href={url} target="_blank" rel="noopener">{title}</a></h2>
  {author && <p>By: {author}</p>}
  <p>{description}</p>
  <p>Likes: {likes} | Downloads: {downloads}</p>
  {tags.length > 0 && (
    <ul>
      {tags.map((tag: string) => <li>{tag}</li>)}
    </ul>
  )}
</article>

<style>
  .model-card {
    border: 1px solid #ccc;
    padding: 1em;
    margin-bottom: 1em;
  }
</style> 